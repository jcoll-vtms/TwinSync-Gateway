<Window x:Class="TwinSync_Gateway.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TwinSync_Gateway.ViewModels"
        xmlns:models="clr-namespace:TwinSync_Gateway.Models"
        Title="Gateway" Height="600" Width="980"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Robot list -->
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="Add" Width="80" Margin="0,0,8,0" Command="{Binding AddRobotCommand}" />
                <Button Content="Remove" Width="80" Margin="0,0,8,0" Command="{Binding RemoveRobotCommand}" />
                <Button Content="Save" Width="80" Margin="0,0,8,0" Command="{Binding SaveCommand}" />

            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="Reload" Width="80" Margin="0,0,8,0" Command="{Binding ReloadCommand}" />
                <Button Content="Connect" Width="80" Margin="0,0,8,0" Command="{Binding ConnectCommand}" />
                <Button Content="Disconnect" Width="80" Margin="0,0,8,0" Command="{Binding DisconnectCommand}" />
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="UserA Plan" Width="80" Margin="0,0,8,0"
            Command="{Binding ApplyUserAPlanCommand}" />
                <Button Content="UserB Plan" Width="80" Margin="0,0,8,0"
            Command="{Binding ApplyUserBPlanCommand}" />
                <Button Content="Remove UserB" Width="100"
            Command="{Binding RemoveUserBCommand}" />
            </StackPanel>

            <ListBox ItemsSource="{Binding Robots}"
                     SelectedItem="{Binding SelectedRobot}"
                     DisplayMemberPath="Name"
                     MinHeight="300"/>
        </DockPanel>

        <!-- Right: Details -->
        <Border Grid.Column="2" Padding="12" CornerRadius="6" BorderBrush="#DDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Robot Details" FontSize="18" FontWeight="SemiBold"/>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Status: " Foreground="#666"/>
                    <TextBlock Text="{Binding SelectedRobot.Status}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SelectedRobot.LastError}" Foreground="Tomato" Margin="12,0,0,0" TextWrapping="Wrap" Width="360"/>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding SelectedRobot.Name, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="IP Address:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Text="{Binding SelectedRobot.IpAddress, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Connection Type:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="4" Grid.Column="1"
                              SelectedItem="{Binding SelectedRobot.ConnectionType, Mode=TwoWay}"
                              >
                        <ComboBox.ItemsSource>
                            <x:Array Type="{x:Type models:ConnectionType}">
                                <models:ConnectionType>KarelSocket</models:ConnectionType>
                                <models:ConnectionType>Pcdk</models:ConnectionType>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>
                </Grid>

                <!-- Connection-specific settings -->
                <GroupBox Grid.Row="4" Header="Connection Settings" Padding="10">
                    <StackPanel>

                        <!-- KAREL -->
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedRobot.ConnectionType}"
                                                     Value="{x:Static models:ConnectionType.KarelSocket}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Width="140" Text="KAREL Port:" VerticalAlignment="Center"/>
                                <TextBox Width="120"
                                         Text="{Binding SelectedRobot.KarelPort, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>

                            <TextBlock Foreground="#666" TextWrapping="Wrap">
                                KAREL Socket mode will connect to your JSON-lines server on the robot/controller-side PC.
                            </TextBlock>
                        </StackPanel>

                        <!-- PCDK -->
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedRobot.ConnectionType}"
                                                     Value="{x:Static models:ConnectionType.Pcdk}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Width="140" Text="PCDK Robot Name:" VerticalAlignment="Center"/>
                                <TextBox Width="260"
                                         Text="{Binding SelectedRobot.PcdkRobotName, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>

                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Width="140" Text="PCDK Timeout (ms):" VerticalAlignment="Center"/>
                                <TextBox Width="120"
                                         Text="{Binding SelectedRobot.PcdkTimeoutMs, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>

                            <TextBlock Foreground="#666" TextWrapping="Wrap">
                                PCDK mode will use the FANUC PCDK API on this gateway machine.
                            </TextBlock>
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

                <StackPanel Grid.Row="6" Margin="8" Orientation="Vertical">



                    <GroupBox Header="Signals" Margin="0,0,0,8">
                        <StackPanel Margin="8">
                            <TextBlock Text="Digital Inputs:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedRobot.DIText}" Margin="0,0,0,6"/>

                            <TextBlock Text="Group Inputs:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedRobot.GIText}" Margin="0,0,0,6"/>

                            <TextBlock Text="Group Outputs:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedRobot.GOText}" Margin="0,0,0,6"/>

                            <TextBlock Text="{Binding SelectedRobot.LastTelemetryText}"
                       FontSize="11"
                       Foreground="Gray"
                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Live Joints">
                        <StackPanel Margin="8">
                            <TextBlock Text="{Binding SelectedRobot.Name}" FontWeight="Bold" Margin="0,0,0,6"/>

                            <UniformGrid Columns="2">
                                <TextBlock Text="J1:"/>
                                <TextBlock Text="{Binding SelectedRobot.J1, StringFormat=F3}"/>
                                <TextBlock Text="J2:"/>
                                <TextBlock Text="{Binding SelectedRobot.J2, StringFormat=F3}"/>
                                <TextBlock Text="J3:"/>
                                <TextBlock Text="{Binding SelectedRobot.J3, StringFormat=F3}"/>
                                <TextBlock Text="J4:"/>
                                <TextBlock Text="{Binding SelectedRobot.J4, StringFormat=F3}"/>
                                <TextBlock Text="J5:"/>
                                <TextBlock Text="{Binding SelectedRobot.J5, StringFormat=F3}"/>
                                <TextBlock Text="J6:"/>
                                <TextBlock Text="{Binding SelectedRobot.J6, StringFormat=F3}"/>
                            </UniformGrid>

                            <TextBlock Margin="0,8,0,0" Text="{Binding SelectedRobot.Status}" />
                            <TextBlock Foreground="Red" Text="{Binding SelectedRobot.LastError}" />
                        </StackPanel>
                    </GroupBox>

                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
